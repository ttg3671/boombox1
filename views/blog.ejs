  <script type="text/javascript">
    const loadingSpinner = document.getElementById('loadingSpinner');
    // console.log(loadingSpinner);
    
    setTimeout(function() {
      if (loadingSpinner) {
        loadingSpinner.style.display = 'none';
      }
    }, 5000);

    // console.log(data3);

    // const screenWidth = window.innerWidth;

