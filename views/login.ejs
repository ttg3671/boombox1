<%- include("./includes/head.ejs", { data2: '' }); %>

<link rel="stylesheet" href="/style.css">

<body>
	<style>
		.loginDiv1 {
			margin-top: 50px;
		}

		#subForm {
			display: flex;
			flex-direction: column;
			justify-content: center;
			height: 100vh;
		}
	</style>

	<header>
		<%- include("./includes/header.ejs"); %>
	</header>

	<div class="loading-spinner" id="loadingSpinner">
	    <img src="/cube.webp" alt="Your Logo" class="logoSp">
	    <div class="spinner"></div>
  </div>

  <section>
		<div class="container border-0 p-0 loginDiv1">
			<div class="row justify-content-center">
		        <div class="col-12 text-center">
		          	<% if(errorMessage) { %>
		            	<div class="alert alert-danger mt-4" role="alert"><%= errorMessage %></div>
		          	<% } %>
		        </div>

				<div class="col-12 col-lg-2"></div>

				<div class="col-12 col-lg-8 p-4" id="subForm">
            		<h1 class="text-center text-uppercase"><%= lang.login_h1 %></h1>
            		<h5 class="text-center">
            			<%= lang.login_h2 %>
            			<a href="/register" style="text-decoration: none; color: red;"><%= lang.login_h3 %></a>
            		</h5>
					<form action="/login" method="POST" novalidate>
					  <div class="mb-1">
					    <label for="exampleInputEmail1" class="form-label"></label>
					    <input 
					    	type="email" 
					    	class="form-control p-3" 
					    	name="email" 
					    	id="exampleInputEmail1" 
					    	aria-describedby="emailHelp"
					    	placeholder="<%= lang.login_h6 %>"
                            value="<%= oldInput.email %>" 
					    	required
					    >
					  </div>
					  <div class="mb-3">
					    <label for="exampleInputPassword1" class="form-label"></label>
					    <input 
					    	type="password" 
					    	class="form-control p-3" 
					    	name="password"
					    	placeholder="<%= lang.login_h7 %>" 
					    	id="exampleInputPassword1" 
					    	required
					    >
					  </div>
					  <div class="mb-3 form-check text-end">
					    <a href="/forget_password" class="text-secondary"><%= lang.login_h4 %></a>
					  </div>
					  <div class="mb-3">
					  	<button type="submit" class="btn btn-dark text-white w-100"><%= lang.login_h5 %></button>
					  </div>
					</form>
				</div>

				<div class="col-12 col-lg-2"></div>
			</div>
		</div>
	</section>

	<section>
	    <%- include("./includes/lang_select.ejs"); %>
  </section>
    
  <footer>
		<%- include("./includes/footer.ejs"); %>
	</footer>

  	<script>
  		window.addEventListener('load', function () {
	      // console.log("hii...");

	      const loadingSpinner = document.getElementById('loadingSpinner');
	        
	      loadingSpinner.style.display = 'none';
	    });
  	</script>
</body>

<%- include("./includes/end.ejs"); %>